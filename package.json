{
  "name": "github-action-practice",
  "version": "1.0.0",
  "main": "dist/index.js",
  "author": "roy.j.song",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "release": "ncc build src/index.ts && git add -f dist/",
    "check-all": "concurrently \"npm:format-check\" \"npm:lint\" \"npm:test\" \"npm:build\"",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint **/*.ts",
    "test": "jest --testTimeout 10000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/royjsong/action-github-pratice.git"
  },
  "devDependencies": {
    "@types/node": "^14.14.37",
    "@zeit/ncc": "^0.22.3",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.4",
    "@actions/github": "^4.0.0"
  }
}
